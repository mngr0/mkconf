#!/usr/bin/python
import subprocess
import sys
import time
set=float(str(sys.argv[1]).rstrip())
subprocess.check_output(["halcmd sets e0.temp.set %s" %set], shell=True).rstrip()
act = float(subprocess.check_output("halcmd gets e0.temp.meas", shell=True).rstrip())
print ("bl act=%s   set= %s"%(act,set))
while(act<set):
	set=float(subprocess.check_output("halcmd gets e0.temp.set", shell=True).rstrip())
	act=float(subprocess.check_output("halcmd gets e0.temp.meas", shell=True).rstrip())
	print ("il act=%s   set= %s"%(act,set))
	time.sleep(3)
