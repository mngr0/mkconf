<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
<hbox>
  <label>
    <text>"Extruder Temp:"</text>
  </label>
  <number>
    <halpin>"E0.Temp.set"</halpin>
    <format>"3.1f"</format>
  </number>
  <button>
    <halpin>"E0.Temp.decrease"</halpin>
    <text>"-"</text>
  </button>
  <button>
    <halpin>"E0.Temp.increase"</halpin>
    <text>"+"</text>
  </button>
  <checkbutton>
    <halpin>"E0.enable"</halpin>
    <text>"enable"</text>
    <initval>1</initval>
  </checkbutton>


</hbox>
  <bar>
    <halpin>"E0.Temp"</halpin>
    <max_>300</max_>
  </bar>

<hbox>
  <label>
    <text>"Bed Temp:"</text>
  </label>

  <number>
    <halpin>"Bed.Temp.set"</halpin>
    <format>"3.1f"</format>
  </number>
  <button>
    <halpin>"Bed.Temp.decrease"</halpin>
    <text>"-"</text>
  </button>
  <button>
    <halpin>"Bed.Temp.increase"</halpin>
    <text>"+"</text>
  </button>
  <checkbutton>
    <halpin>"bed.enable"</halpin>
    <text>"enable"</text>
    <initval>1</initval>
  </checkbutton>
</hbox>
  <bar>
    <halpin>"Bed.Temp"</halpin>
    <max_>300</max_>
  </bar>

  <button>
    <halpin>"home-all"</halpin>
    <text>"HOME ALL"</text>
  </button>
  <button>
    <halpin>"gcode2ngc"</halpin>
    <text>"convert GCODE to NGC"</text>
  </button>


</pyvcp>
